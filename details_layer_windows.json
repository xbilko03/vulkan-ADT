{
  "file_format_version" : "1.0.0",
  "layer" : {
    "name": "VK_LAYER_VUT_DetailsLayer",
    "type": "GLOBAL",
    "library_path": ".\\dbgrvlayer.dll",
    "api_version": "1.3.0",
    "implementation_version": "1",
    "description": "DetailsLayer.welcome",
    "functions": {
      "vkGetInstanceProcAddr": "DetailsLayer_GetInstanceProcAddr",
      "vkGetDeviceProcAddr": "DetailsLayer_GetDeviceProcAddr"
    },
    "enable_environment": {
      "ENABLE_VUT_LAYER": "1"
    },
    "disable_environment": {
      "DISABLE_VUT_LAYER": "1"
    },
    "features" : {
      "settings":[
        {
        "key": "app_path",
        "label": "App Path",
        "description": "Specifies the app filename.",
        "type": "LOAD_FILE",
        "default": "default"
        },
        {
          "key": "enable_message_logging",
          "label": "Log Messages",
          "description": "Enables the logging of the messages into a file.",
          "type": "BOOL",
          "default": false,
          "settings":
          [
            {
              "key": "output_path",
              "label": "Output Path",
              "description": "Specifies the output filename.",
              "type": "SAVE_FILE",
              "default": "none"
              }
          ]
        },
        {
          "key": "enable_warnings",
          "label": "Warnings",
          "description": "Enables the layer warning messages triggers.",
          "type": "BOOL",
          "default": false,
          "settings":
          [
            {
              "key": "frame_every",
              "label": "Warn Every Xth Frame",
              "description": "Logs a warning every Xth frame.",
              "type": "INT",
              "default": "0"
            },
            {
              "key": "frame_at",
              "label": "Warn at Xth Frame",
              "description": "Logs a warning at Xth frame.",
              "type": "INT",
              "default": "0"
            },
            {
              "key": "fps_below",
              "label": "Warn when below X FPS",
              "description": "Logs when below X FPS.",
              "type": "INT",
              "default": "0"
            },
            {
              "key": "fps_every",
              "label": "Warn about FPS every X Frames",
              "description": "Logs FPS every X frames.",
              "type": "INT",
              "default": "0"
            },
            {
              "key": "triangles_over",
              "label": "Warn triangle count when over X",
              "description": "Logs triangle count when over X.",
              "type": "INT",
              "default": "0"
            },
            {
              "key": "triangles_every",
              "label": "Warn triangle count every Xth frame",
              "description": "Logs triangle count every Xth frame.",
              "type": "INT",
              "default": "0"
            }
          ]
        }
      ]
    }
  }
}
